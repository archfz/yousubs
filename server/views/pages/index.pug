extends ../main.pug

block content
    div.player
        div#video

        div#controls
            div.control
                button#next_video Next video
                    span.shortcut CTRL + ALT + ~
            div.control
                button#forward Forward (20s)
                    span.shortcut CTRL + ALT + (NUM)Del
            div.control
                button#like Like
                    span.shortcut CTRL + ALT + *

        div#options
            input(type="checkbox" id="idle_pause" checked)
            label idle pause (1min)

        div.lists
            div.likes
                h3 Likes
                div#likes
            div.history
                h3 History
                div#history
